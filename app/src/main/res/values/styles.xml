<?xml version="1.0" encoding="utf-8"?>
<resources>


<!--    text style-->
    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ft_montserrat_regular</item>
    </style>

    <style name="textStyle.500">
        <item name="android:fontFamily">@font/ft_montserrat_medium</item>
    </style>

    <style name="textStyle.700">
        <item name="android:fontFamily">@font/ft_montserrat_bold</item>
    </style>

    <style name="primaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ft_montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>


<!--    layout style-->
    <style name="layoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>